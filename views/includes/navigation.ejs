      >
    </li>
    <li class="mobile-nav__item">
      <a class="<%= path === '/covid' ? 'active' : '' %>" href="/covid"
        >THÔNG TIN COVID</a
      >
    </li>
    <%if (role==='admin' ) {%>
      <li>
      <li class="mobile-nav__item">
          <a href="/manageStaff" class="<%= path === '/manageStaff' ? 'active' : ''%>">Manage Staff</a>
      </li>
      </li>
      <%}%>
    <%if (isAuthenticated) {%>
