<div class="d-flex">
  <div class="mx-auto mt-3">
    <div class="custom-form">
      <form action="/attendance/start" method="GET">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <button <%= path === '/attendance' || path === '/attendance/start' || path === '/attendance/endWork' ? null : 'disabled' %> class="btn-custom" type="submit">Bắt Đầu Làm Việc</button>
      </form>
    </div>
    <div class="custom-form">
      <form action="/attendance/end" class="custom-form" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <button <%= path === '/attendance/workingInfo' ? null : 'disabled' %> class="btn-custom" type="submit">Kết Thúc Làm Việc</button>
      </form>
    </div>
    <div class="custom-form">
      <form action="/attendance/annualLeave" class="custom-form" method="GET">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <button <%= path === '/attendance/workingInfo' ? 'disabled' : null %> class="btn-custom" type="submit">Nghỉ Phép</button>
      </form>
    </div>
  </div>
</div>
